<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" strict ="true">
  <Appenders>
	  
      <Appender type ="File" name="file" fileName="C:\Users\Innodeed Systems\Documents\LogsXml\logsdemo.log">
        <Layout  type= "PatternLayout" pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/> 
    
          </Appender>
         
    <Appender type="Console" name="STDOUT">
    <PatternLayout disableAnsi="false"  pattern="%highlight{%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} @%L - %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=black, DEBUG=green bold, TRACE=blue}"/>    
   </Appender>
   
  </Appenders>
  
  
  <Loggers>
    <Root level="all">
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>
